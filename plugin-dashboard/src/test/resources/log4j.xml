<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

  <!-- ====================================================================== -->
  <!-- A P P E N D E R S                                                      -->
  <!-- ====================================================================== -->


  <!-- console -->
  <appender name="console" class="org.apache.log4j.ConsoleAppender">
    <param name="Target" value="System.out"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%-5p - [%-80m] - at %c.%M(%F:%L)%n"/>
    </layout>
    <filter class="org.apache.log4j.varia.LevelRangeFilter">
      <param name="levelMin" value="DEBUG"/>
    </filter>
  </appender>

  <!-- ====================================================================== -->
  <!-- L O G G E R S                                                          -->
  <!-- ====================================================================== -->
  <category name="DataNucleus">
    <level value="fatal"/>
  </category>
  <category name="org.quartz">
    <level value="warn"/>
  </category>

  <category additivity="false" name="net.sf">
    <level value="warn"/>
    <appender-ref ref="console"/>
  </category>
  <category additivity="false" name="org.hippoecm">
    <level value="warn"/>
    <appender-ref ref="console"/>
  </category>

  <category name="org.springframework">
    <level value="warn"/>
  </category>
  <category name="org.datanucleus">
    <level value="error"/>
  </category>
  <category name="org.onehippo">
    <level value="error"/>
  </category>
  <category name="freemarker">
    <level value="warn"/>
  </category>

  <category name="org.apache">
    <level value="warn"/>
  </category>
  <category name="httpclient.wire">
    <level value="warn"/>
  </category>
  <category name="org.onehippo.cms7">
    <level value="warn"/>
  </category>

  <category name="org.apache.wicket">
    <level value="error"/>
  </category>

  <category name="org.onehippo.cms7.essentials">
    <level value="debug"/>
  </category>

  <root>
    <level value="info"/>
    <appender-ref ref="console"/>
  </root>

</log4j:configuration>

