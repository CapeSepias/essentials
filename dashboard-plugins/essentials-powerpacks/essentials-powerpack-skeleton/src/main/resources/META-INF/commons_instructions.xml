<?xml version="1.0" encoding="UTF-8"?>

<instructions xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://www.onehippo.org/essentials/instructions /instructions.xsd" xmlns="http://www.onehippo.org/essentials/instructions">
  <!--
  //############################################
  // COMMONS POWERPACK ADDS SHARED FILES/CONFIGURATION
  //############################################
  -->
  <instructionSet group="jsp">
    <file action="copy" source="powerpack/jsp/imports.jsp" target="{{jspRoot}}/essentials/common/imports.jsp"/>
    <file action="copy" source="powerpack/jsp/pagination.jsp" target="{{jspRoot}}/essentials/common/pagination.jsp"/>
    <file action="copy" source="powerpack/jsp/essentials-home.jsp" target="{{jspRoot}}/essentials/essentials-home.jsp"/>
    <file action="copy" source="powerpack/jsp/essentials-layout-webpage.jsp" target="{{jspRoot}}/essentials/essentials-layout-webpage.jsp"/>
    <file action="copy" source="powerpack/jsp/essentials-standard-main.jsp" target="{{jspRoot}}/essentials/essentials-standard-main.jsp"/>
    <file action="copy" source="powerpack/jsp/essentials-standard-menu.jsp" target="{{jspRoot}}/essentials/essentials-standard-menu.jsp"/>
  </instructionSet>
  <instructionSet group="jsp">
    <xml action="copy" source="powerpack/xml/hst/templates/layout-webpage-jsp.xml" target="/hst:hst/hst:configurations/{{namespace}}/hst:templates"/>
    <xml action="copy" source="powerpack/xml/hst/templates/standard-main-jsp.xml" target="/hst:hst/hst:configurations/{{namespace}}/hst:templates"/>
    <xml action="copy" source="powerpack/xml/hst/templates/standard-menu-jsp.xml" target="/hst:hst/hst:configurations/{{namespace}}/hst:templates"/>
    <xml action="copy" source="powerpack/xml/hst/templates/homepage-jsp.xml" target="/hst:hst/hst:configurations/{{namespace}}/hst:templates"/>
  </instructionSet>

  <instructionSet group="freemarker">
    <file action="copy" source="powerpack/freemarker/imports.ftl" target="{{freemarkerRoot}}/essentials/common/imports.ftl"/>
    <file action="copy" source="powerpack/freemarker/pagination.ftl" target="{{freemarkerRoot}}/essentials/common/pagination.ftl"/>
    <file action="copy" source="powerpack/freemarker/essentials-home.jsp" target="{{freemarkerRoot}}/essentials/essentials-home.jsp"/>
    <file action="copy" source="powerpack/freemarker/essentials-layout-webpage.jsp" target="{{freemarkerRoot}}/essentials/essentials-layout-webpage.jsp"/>
    <file action="copy" source="powerpack/freemarker/essentials-standard-main.jsp" target="{{freemarkerRoot}}/essentials/essentials-standard-main.jsp"/>
    <file action="copy" source="powerpack/freemarker/essentials-standard-menu.jsp" target="{{freemarkerRoot}}/essentials/essentials-standard-menu.jsp"/>
  </instructionSet>
  <instructionSet group="freemarker">
    <xml action="copy" source="powerpack/xml/hst/templates/layout-webpage-ftl.xml" target="/hst:hst/hst:configurations/{{namespace}}/hst:templates"/>
    <xml action="copy" source="powerpack/xml/hst/templates/standard-main-ftl.xml" target="/hst:hst/hst:configurations/{{namespace}}/hst:templates"/>
    <xml action="copy" source="powerpack/xml/hst/templates/standard-menu-ftl.xml" target="/hst:hst/hst:configurations/{{namespace}}/hst:templates"/>
    <xml action="copy" source="powerpack/xml/hst/templates/homepage-ftl.xml" target="/hst:hst/hst:configurations/{{namespace}}/hst:templates"/>
  </instructionSet>

  <!--
    //############################################
    // COMMON HST
    //############################################

  -->
  <instructionSet>
    <xml action="copy" source="powerpack/xml/menu/main.xml" target="/hst:hst/hst:configurations/{{namespace}}/hst:sitemenus"/>
    <xml action="copy" source="powerpack/xml/hst/sitemap/root.xml" target="/hst:hst/hst:configurations/{{namespace}}/hst:sitemap"/>
    <xml action="copy" source="powerpack/xml/hst/pages/homepage.xml" target="/hst:hst/hst:configurations/{{namespace}}/hst:pages"/>
  </instructionSet>

  <!--
  //############################################
  // CSS/JS
  //############################################
-->
  <instructionSet>
    <file binary="true" action="copy" source="js/jquery-2.1.0.min.js" target="{{javascriptRoot}}/jquery-2.1.0.min.js"/>
    <file action="copy" binary="true" source="bootstrap/css/bootstrap.css" target="{{siteWebRoot}}/css/bootstrap.css"/>
    <file action="copy" binary="true" source="bootstrap/css/bootstrap.min.css" target="{{siteWebRoot}}/css/bootstrap.min.css"/>
    <file action="copy" binary="true" source="bootstrap/fonts/glyphicons-halflings-regular.eot" target="{{siteWebRoot}}/fonts/glyphicons-halflings-regular.eot"/>
    <file action="copy" binary="true" source="bootstrap/fonts/glyphicons-halflings-regular.svg" target="{{siteWebRoot}}/fonts/glyphicons-halflings-regular.svg"/>
    <file action="copy" binary="true" source="bootstrap/fonts/glyphicons-halflings-regular.ttf" target="{{siteWebRoot}}/fonts/glyphicons-halflings-regular.ttf"/>
    <file action="copy" binary="true" source="bootstrap/fonts/glyphicons-halflings-regular.woff" target="{{siteWebRoot}}/fonts/glyphicons-halflings-regular.woff"/>
  </instructionSet>

</instructions>